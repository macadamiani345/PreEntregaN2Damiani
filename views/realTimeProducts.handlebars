<h1>Productos en Tiempo Real</h1>

<div style="background: white; padding: 20px; border-radius: 8px; margin-bottom: 20px;">
    <h2>Agregar Producto</h2>
    <form id="addProductForm">
        <div style="margin-bottom: 10px;">
            <input type="text" id="title" placeholder="Título" required style="width: 100%; padding: 8px; margin-bottom: 5px;">
            <input type="text" id="description" placeholder="Descripción" required style="width: 100%; padding: 8px; margin-bottom: 5px;">
            <input type="text" id="code" placeholder="Código" required style="width: 100%; padding: 8px; margin-bottom: 5px;">
            <input type="number" id="price" placeholder="Precio" required style="width: 100%; padding: 8px; margin-bottom: 5px;">
            <input type="number" id="stock" placeholder="Stock" required style="width: 100%; padding: 8px; margin-bottom: 5px;">
            <input type="text" id="category" placeholder="Categoría" required style="width: 100%; padding: 8px; margin-bottom: 5px;">
        </div>
        <button type="submit" style="background: #27ae60; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">
            Agregar Producto
        </button>
    </form>
</div>

<div id="productList" class="product-list">
    {{#each products}}
    <div class="product-card" data-id="{{this.id}}">
        <h3>{{this.title}}</h3>
        <p><strong>ID:</strong> {{this.id}}</p>
        <p>{{this.description}}</p>
        <p><strong>Código:</strong> {{this.code}}</p>
        <p class="price">${{this.price}}</p>
        <p><strong>Stock:</strong> {{this.stock}}</p>
        <p><strong>Categoría:</strong> {{this.category}}</p>
        <button onclick="deleteProduct({{this.id}})" style="background: #e74c3c; color: white; padding: 5px 10px; border: none; border-radius: 3px; cursor: pointer;">
            Eliminar
        </button>
    </div>
    {{else}}
    <p>No hay productos disponibles</p>
    {{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>
